<?xml version="1.0" encoding="utf-8" standalone="no"?>
<extension method="upgrade" type="component" version="2.5">
    <name>RokEcwid</name>
    <creationDate>December 5, 2013</creationDate>
    <author>Ecwid, Inc</author>
    <authorEmail>support@ecwid.com</authorEmail>
    <authorUrl>http://www.ecwid.com</authorUrl>
    <copyright>(C) 2009 - 2013 Ecwid, Inc.(C)</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <version>1.5</version>
    <description>
        Ecwid offers the performance and flexibility you need, with none of the hassles you don't.
    </description>
    
    <!-- user part -->
    <files folder="site">
        <folder>helpers</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>rokecwid.php</filename>
    </files>

    <!-- administration part -->
    <administration>
        <menu img="components/com_rokecwid/assets/images/ecwid_16.png">RokEcwid</menu>
        <files folder="admin">
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>views</folder>
            <filename>controller.php</filename>
            <folder>language</folder>
            <folder>controllers</folder>
            <filename>index.html</filename>
            <filename>rokecwid.php</filename>
            <folder>models</folder>
        </files>
        
        <!-- Administration Language File Copy Section -->
        <languages folder="admin/language/en-GB">
            <language tag="en-GB">en-GB.com_rokecwid.ini</language>
            <language tag="en-GB">en-GB.com_rokecwid.sys.ini</language>
        </languages>
    
    </administration>
</extension>
